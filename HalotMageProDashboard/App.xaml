<Application x:Class="HalotMageProDashboard.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:HalotMageProDashboard.Views.Converters">
    <Application.Resources>
        <ResourceDictionary>

            <c:AddNewPrinterDialogConverter x:Key="AddNewPrinterDialogConverter" />
            <c:ConnectionBooleanConverter x:Key="ConnectionBooleanConverter" />

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MetroRadiance;component/Styles/Controls.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MetroRadiance;component/Themes/Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MetroRadiance;component/Themes/Accents/Blue.xaml" />

                <ResourceDictionary Source="/Themes/ComboBox.xaml" />
                <ResourceDictionary Source="/Themes/ContextMenu.xaml" />
                <ResourceDictionary Source="/Themes/DataGrid.xaml" />
                <ResourceDictionary Source="/Themes/MenuItem.xaml" />
                <ResourceDictionary Source="/Themes/ProgressRing.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
